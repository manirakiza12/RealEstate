<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg">

    <include layout="@layout/layout_top_pattern" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/payment_successful"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/urbanistextrabold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/payment_success"
            android:textColor="@color/title"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvSuccessMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/urbanistbold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="8sp"
            android:text="@string/app_name"
            android:textColor="@color/subTitle_80"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/urbanistbold"
            android:includeFontPadding="false"
            android:paddingStart="70dp"
            android:paddingTop="12dp"
            android:paddingEnd="70dp"
            android:paddingBottom="12dp"
            android:text="@string/back_to_home"
            android:textAllCaps="false"
            android:textColor="@color/white2"
            android:textSize="18sp"
            app:backgroundTint="@color/back_home_bg"
            app:cornerRadius="50dp" />

    </LinearLayout>

</RelativeLayout>